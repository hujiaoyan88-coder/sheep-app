@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link">ようこそ @User.Identity.Name!</span>
        </li>
        <li class="nav-item">
            <form asp-area="Identity"
                  asp-page="/Account/Logout"
                  asp-route-returnUrl="/"
                  method="post">
                <button type="submit" class="btn">
                    ログアウト
                </button>
            </form>

            <form asp-page="/sheeps/DeleteAccount"
                  asp-route-returnUrl="/"
                  method="post">
                <button type="submit" class="btn">
                    アカウント削除
                </button>
            </form>

        </li>
    }
   
</ul>

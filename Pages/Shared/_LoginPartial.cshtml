@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link">ようこそ @User.Identity.Name!</span>
        </li>
        <li class="nav-item">
            <a asp-page="//Account/Logout" class="nav-link">ログアウト</a>

            <a asp-page="/sheeps/DeleteAccount" class="nav-link text-danger">アカウント削除</a>

        </li>
    }
   
</ul>
